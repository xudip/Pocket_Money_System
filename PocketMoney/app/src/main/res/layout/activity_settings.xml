<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xudip.pocketmoney.Settings">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridBackgroundColor"
        android:clickable="true"
        android:onClick="actionBackgroundColor"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:text="Background Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblBackgroundColor"
            android:layout_weight="1"
            android:textSize="16sp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backgroundColorValue"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

// border view
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/gridBackgroundColor"
        android:background="@android:color/holo_blue_dark" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridBackgroundColor"
        android:layout_alignParentStart="true"
        android:id="@+id/gridButtonColor"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:onClick="actionButtonColor">

        <TextView
            android:text="Button Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblButtonColor"
            android:layout_weight="1"
            android:textSize="16sp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonColorValue"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
    </LinearLayout>


    // border view
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/gridButtonColor"
        android:background="@android:color/holo_blue_dark" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridButtonColor"
        android:id="@+id/gridSetTimeToNotify"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:text="Set Time To Notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:id="@+id/lblSetTimeToNotify" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:id="@+id/setTimeToNotifyValue" />
    </LinearLayout>

    // border view
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/gridSetTimeToNotify"
        android:background="@android:color/holo_blue_dark" />

    // border view

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridSetTimeToNotify"
        android:layout_alignParentStart="true"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/gridBackUpData">
        <TextView
            android:text="Back Up Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:id="@+id/lblBackUp"/>

    </LinearLayout>

    // border view
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/gridBackUpData"
        android:background="@android:color/holo_blue_dark" />



</RelativeLayout>
